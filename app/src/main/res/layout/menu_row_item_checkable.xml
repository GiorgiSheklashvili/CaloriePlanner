<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">
    <CheckedTextView
        android:id="@+id/menu_item_CheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/menu_item_margin_bottom"
        android:layout_marginEnd="@dimen/menu_item_margin_end"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginRight="@dimen/menu_item_margin_right"
        android:layout_marginStart="@dimen/menu_item_margin_start"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center" />
</LinearLayout>

